generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/stock_picking_agent/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Ticker {
    id          String   @id @default(cuid())
    symbol      String   @unique
    name        String
    exchange    String?
    type        String?  @default("Equity")
    category    String   @default("watchlist") // "portfolio" or "watchlist"
    addedAt     DateTime @default(now())
    updatedAt   DateTime @updatedAt
    
    @@index([category])
    @@index([symbol])
}
